<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
   xmlns:g="urn:import:com.google.gwt.user.client.ui" 
   xmlns:c="urn:import:com.google.gwt.user.cellview.client"
   xmlns:meteo-suggest="urn:import:es.uned.grc.pfc.meteo.client.view.widget.suggest.impl"
   xmlns:meteo-widget="urn:import:es.uned.grc.pfc.meteo.client.view.widget"
   xmlns:meteo="urn:import:es.uned.grc.pfc.meteo.client.view.impl"
   xmlns:dp="urn:import:com.google.gwt.user.datepicker.client"
   ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
   ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
   ui:generateLocales="default">

   <g:HTMLPanel styleName="left_box">
      <g:HTMLPanel styleName="formulaire" ui:field="searchPanel">
         <g:HorizontalPanel width="100%">
            <g:cell width="95%">
               <g:VerticalPanel>
                  <g:VerticalPanel ui:field="observedFilterPanel" width="100%">
                     <g:HorizontalPanel>
                        <g:VerticalPanel>
                           <g:Label>
                              <ui:msg meaning="init date filter" description="label for observations filter">Fecha</ui:msg>
                           </g:Label>
                           <dp:DateBox ui:field="startDateBox" />
                        </g:VerticalPanel>
                     </g:HorizontalPanel>
                     <g:HorizontalPanel>
                        <g:VerticalPanel>
                           <g:Label>
                              <ui:msg meaning="variable filter" description="label for observations filter">Variables</ui:msg>
                           </g:Label>
                           <meteo-suggest:VariableSuggestInputListBox ui:field="variableSuggestInputListBox" />
                        </g:VerticalPanel>
                        <g:VerticalPanel>
                           <g:Label>
                              <ui:msg meaning="only measured filter" description="label for observations filter">Sólo medidas</ui:msg>
                           </g:Label>
                           <g:CheckBox ui:field="onlyMeasuredCheckBox" />
                        </g:VerticalPanel>
                        <g:VerticalPanel>
                           <g:Label>
                              <ui:msg meaning="only derived filter" description="label for observations filter">Sólo calculadas</ui:msg>
                           </g:Label>
                           <g:CheckBox ui:field="onlyDerivedCheckBox" />
                        </g:VerticalPanel>
                     </g:HorizontalPanel>
                  </g:VerticalPanel>
                  <g:VerticalPanel ui:field="derivedFilterPanel" width="100%">
                     <g:Label>
                        <ui:msg meaning="exact date filter" description="label for observations filter">Fecha</ui:msg>
                     </g:Label>
                     <dp:DateBox ui:field="exactDateBox" />
                  </g:VerticalPanel>
               </g:VerticalPanel>
            </g:cell>
            <g:cell width="5%">
               <g:Button ui:field="searchButton" styleName="submit">
                  <ui:msg meaning="sync button" description="Title for search button">Buscar</ui:msg>
               </g:Button>
            </g:cell>
         </g:HorizontalPanel>
      </g:HTMLPanel>
      <g:HorizontalPanel ui:field="textPanel" width="100%">
         <c:CellTable ui:field="observationCellTable" pageSize="1000" autoFooterRefreshDisabled="false" autoHeaderRefreshDisabled="false"  width="100%"/>
      </g:HorizontalPanel>
      <g:VerticalPanel ui:field="graphPanel" width="100%"/>
      <g:VerticalPanel ui:field="derivedPanel" width="100%"/>
   </g:HTMLPanel>
</ui:UiBinder>
