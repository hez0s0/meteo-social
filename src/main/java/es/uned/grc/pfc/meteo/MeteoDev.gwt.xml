<?xml version="1.0" encoding="UTF-8"?>
<module rename-to='meteo'>

   <!-- Inherit the main module. -->
   <inherits name='es.uned.grc.pfc.meteo.meteo' />
   
   <!-- Set a different theme to clearly know we are in DEV version -->
   <inherits name='com.google.gwt.user.theme.chrome.Chrome'/>
   <!-- add our custom stylesheet -->
   <stylesheet src="../css/style.css" />
   
   <!-- Configure logging -->
   <set-property name="gwt.logging.logLevel" value="INFO" />
   <set-property name="gwt.logging.enabled" value="TRUE" />
   <set-property name="gwt.logging.popupHandler" value="DISABLED" />
   <set-property name="gwt.logging.developmentModeHandler"  value="ENABLED" />   
   <set-property name="gwt.logging.simpleRemoteHandler" value="ENABLED" />
   <set-property name="gwt.logging.systemHandler" value="ENABLED" />

   <set-property name="compiler.emulatedStack" value="true" />
   <set-configuration-property name="compiler.emulatedStack.recordLineNumbers" value="true"/>
   <set-configuration-property name="compiler.emulatedStack.recordFileNames" value="true"/>
  
   <!-- Compile only for Chrome -->
   <set-property name="user.agent" value="safari" />
   <!-- Compile only for FireFox -->
<!--    <set-property name="user.agent" value="gecko1_8" /> -->
   <!-- Compile only for IE8 -->
   <!-- <set-property name="user.agent" value="ie8" />  -->
   <!-- Compile only for IE9 -->
   <!-- <set-property name="user.agent" value="ie9" /> -->
   
   <!-- locale for testing -->
   <extend-property name="locale" values="es_ES" />
   <set-property-fallback name="locale" value="es_ES"/> 
</module>
